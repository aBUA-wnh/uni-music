.quick-navigation {
  width: 100%;
  padding-bottom: 20rpx;
  position: relative;
}
.quick-navigation::before {
  content: '';
  position: absolute;
  width: 200%;
  height: 1px;
  bottom: 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: scale(0.5, 0.5);
          transform: scale(0.5, 0.5);
  box-sizing: border-box;
}
.quick-navigation-box {
  width: 91%;
  margin: 0 auto;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
}
.quick-navigation-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.quick-navigation-icon-box {
  width: 96rpx;
  height: 96rpx;
  background: #ffebea;
  border-radius: 50%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.quick-navigation-icon {
  width: 90%;
  height: 90%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  -webkit-mask-size: 100%;
  background: linear-gradient(45deg, #EB4D44, #EB4D44, #fff);
}
.quick-navigation-name {
  color: #666;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  text-align: center;
  margin-top: 10rpx;
}
.date-text {
  line-height: 108rpx;
  z-index: 9;
  font-size: 22rpx;
  color: #ffebea;
  margin-right: 2rpx;
}

